<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEA"
    tools:context=".screens.Admin">

    <TextView
        android:id="@+id/tvGoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מסך מנהלים - Vans"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#27548A"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="48dp"
        android:shadowColor="#55000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGoAbout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="40dp"
        android:text="אודות האפליקציה"
        android:textSize="20sp"
        android:textColor="#EFEEEA"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#143D60"
        app:cornerRadius="24dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvGoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGotest"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:text="ניהול משתמשים"
        android:textSize="20sp"
        android:textColor="#EFEEEA"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#143D60"
        app:cornerRadius="24dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoAbout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGotest"
        app:srcCompat="@drawable/admin" />

</androidx.constraintlayout.widget.ConstraintLayout>
